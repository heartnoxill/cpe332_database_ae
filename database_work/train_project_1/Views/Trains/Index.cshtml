@model IEnumerable<train_project_1.Models.Train>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TR_age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maxspeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Max_cap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seats_filled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Seats_remain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Platform)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TR_age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maxspeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Max_cap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seats_filled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seats_remain)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Platform)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TR_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TR_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TR_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
