@model IEnumerable<train_project_1.Models.Ticket>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.date_issued)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Passenger)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Train)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.R_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ScheduleDeparture_date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.date_issued)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Passenger.P_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Train.TR_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class.C_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.R_id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScheduleDeparture_date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.T_id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.T_id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.T_id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
